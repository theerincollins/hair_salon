<h1 class="main-header">Add a Client</h1>

<form action="/clients/new" method="post">

  <div class="form-group">
    <label for="name">Clients's Name:</label>
    <input type="text" name="name" id="name" class="form-control">
  </div>

  <div class="form-group">
  <label for="stylist">Select a Stylist</label>
    <select id='stylist' name='stylist' type='text'>
      <% @stylists.each() do |stylist| %>
        <option value="<%= stylist.id()%>"> <%= stylist.name() %> </option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label for="type_of_cut">Type of Cut:</label>
    <input type="text" name="type_of_cut" id="type_of_cut" class="form-control" placeholder="ex: Full Body Wax">
  </div>

  <p><button type="submit" class="btn btn-success">+ Add</button></p>
  <p><a href="/" class="btn btn-primary" role="button">Return Home<a></p>
</form>
